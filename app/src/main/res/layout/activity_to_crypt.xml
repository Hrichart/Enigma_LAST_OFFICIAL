<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deutch_paper"
    tools:context=".toCrypt">

    <TextView
        android:id="@+id/original_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="46dp"
        android:gravity="center_horizontal"
        android:text="@string/original_text" />

    <TextView
        android:id="@+id/original_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="68dp" />

    <TextView
        android:id="@+id/crypted_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="272dp"
        android:gravity="center_horizontal"
        android:text="@string/crypted_text"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/crypted_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="305dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/decrypted_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="273dp"
        android:gravity="center_horizontal"
        android:text="@string/decrypted_text"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/decrypted_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="305dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/back_to_crypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="507dp"
        android:onClick="openCrypt"
        android:text="@string/back" />

    <Button
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/back_to_crypt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:background="?attr/actionModeCopyDrawable"
        android:onClick="openCopy"/>

</RelativeLayout>
